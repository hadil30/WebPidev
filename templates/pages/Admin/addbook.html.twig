{% extends 'pages/Admin/admindashboard.html.twig' %}

{% block css %}   
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets1/vendor/fonts/boxicons.css') }}" />
    <link rel="stylesheet" href="{{ asset('assets1/vendor/css/core.css') }}" class="template-customizer-core-css" />
    <link rel="stylesheet" href="{{ asset('assets1/vendor/css/theme-default.css') }}" class="template-customizer-theme-css" />
    <link rel="stylesheet" href="{{ asset('assets1/css/demo.css') }}" />
    <link rel="stylesheet" href="{{ asset('assets1/vendor/libs/perfect-scrollbar/perfect-scrollbar.css') }}" />
{% endblock %}

{% block content %}
<div class="main">
            <div >
<body>
    <div class="container">
        <h1 class="mt-5 mb-4">Add book</h1>
        <form method="post" enctype="multipart/form-data">
             {{ form_start(l, {'attr': {'class': 'form-horizontal'}}) }}

            <div class="form-group">
                {{ form_label(l.nomLiv, 'Titre') }}
                {{ form_widget(l.nomLiv, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le titre du book'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(l.disponibiliteLiv, 'disponibilite') }}
                {{ form_widget(l.disponibiliteLiv, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(l.categorieLiv, 'Cat√©gorie du livre') }}
                {{ form_widget(l.categorieLiv, {'attr': {'class': 'form-control'}}) }}
            </div>
               <div class="form-group">
                {{ form_label(l.prixLiv, 'Prix du livre') }}
                {{ form_widget(l.prixLiv, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le prix du book'}}) }}
            </div>

 <div class="form-group">
                        <label class="col-lg-4 col-form-label" for="val-username">Image du livre<span class="text-danger">*</span>
                        </label>
                        <div class="col-lg-8">
 {{ form_label(l.imagePath) }}
                            {% if l.imagePath.vars.value %}
                                <img src="{{ asset('/public/assets/' ~ l.imagePath.vars.value) }}" alt="Image du produit" class="img-thumbnail">
                            {% endif %}
                            {{ form_widget(l.imagePath, {'attr': {'class': 'form-control'}}) }} {# Utilisez imagePath au lieu de ImagePath #}

                             {{ form_errors(l.imagePath, {'attr': {'class': 'text-danger'}}) }}                        </div>
                    </div>
                     <div class="form-group">
                        <label class="col-lg-4 col-form-label" for="val-username">PDF du livre<span class="text-danger">*</span>
                        </label>
                        <div class="col-lg-8">
                            {{ form_label(l.pdfPath) }}
                            {% if l.pdfPath.vars.value %}
                                <!-- Afficher le nom du fichier PDF -->
                                <p>{{ l.pdfPath.vars.value }}</p>
                            {% endif %}
                            {{ form_widget(l.pdfPath, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(l.pdfPath, {'attr': {'class': 'text-danger'}}) }}                        
                        </div>
                    </div>

            <div class="form-group">
                <button type="submit" class="btn-submit btn-block">Envoyer</button>
            </div>

            {{ form_end(l) }}
        </form>
    </div>
    <!-- Core JS -->
    <script src="{{ asset('assets1/vendor/libs/jquery/jquery.js') }}"></script>
    <script src="{{ asset('assets1/vendor/libs/popper/popper.js') }}"></script>
    <script src="{{ asset('assets1/vendor/js/bootstrap.js') }}"></script>
    <script src="{{ asset('assets1/vendor/libs/perfect-scrollbar/perfect-scrollbar.js') }}"></script>
    <script src="{{ asset('assets1/vendor/js/menu.js') }}"></script>

    <!-- Main JS -->
    <script src="{{ asset('assets1/js/main.js') }}"></script>

    <!-- Page JS -->
    <!-- Place this tag in your head or just before your close body tag. -->
    <script async defer src="https://buttons.github.io/buttons.js"></script>
</body>
</div>
</div>
{% endblock %}
