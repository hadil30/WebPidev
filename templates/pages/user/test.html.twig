    {% extends 'pages/Interface_Communes/userinterface.html.twig' %}

    {% block page_content %}
    {% block css %}
        <link rel="stylesheet" href="{{ asset('css/usertest.css') }}">
    {{ parent() }}
    {% endblock %}

    <div class="search-container">
        <form action="{{ path('user_test') }}" method="get">
            <div class="search-wrapper">
                <input type="text" name="search" id="searchInput" placeholder="Search tests..." value="{{ app.request.query.get('search') }}">
            </div>
        </form>
    </div>

    <div class="category-filter">
        <a href="{{ path('user_test') }}">All</a>
        <a href="{{ path('user_test', {'category': 'Language'}) }}">Language</a>
        <a href="{{ path('user_test', {'category': 'Academic'}) }}">Academic</a>
        <a href="{{ path('user_test', {'category': 'University'}) }}">University</a>
        <a href="{{ path('user_test', {'category': 'Skills'}) }}">Skills</a>
        <a href="{{ path('user_test', {'category': 'Citizenship'}) }}">Citizenship</a>
        <a href="{{ path('user_test', {'category': 'Knowledge'}) }}">Knowledge</a>
        <a href="{{ path('user_test', {'category': 'IQ'}) }}">IQ</a>
    </div>

    <div class="cardmaintest-container">
        {% for test in tests %}
        <div class="cardmaintest" onclick="openTestInNewWindow({{ test.id }}, {{ test.taken ? 'true' : 'false' }})" style="cursor: pointer; text-decoration: none; color: inherit;">
                    <div>
                        <ul>
                            <li><strong>{{ test.nom }}</strong></li>
                            {% if test.categorie == 'Language' %}
                                <img src="{{ asset('images/icons8-language-85.png') }}" alt="Language">
                            {% elseif test.categorie == 'Academic' %}
                                <img src="{{ asset('images/icons8-graduation-scroll-85.png') }}" alt="Academic">
                            {% elseif test.categorie == 'University' %}
                                <img src="{{ asset('images/icons8-university-85.png') }}" alt="University">
                            {% elseif test.categorie == 'Skills' %}
                                <img src="{{ asset('images/icons8-skills-85.png') }}" alt="Skills">
                            {% elseif test.categorie == 'Citizenship' %}
                                <img src="{{ asset('images/icons8-passport-id-100.png') }}" alt="Citizenship">
                            {% elseif test.categorie == 'Knowledge' %}
                                <img src="{{ asset('images/icons8-knowledge-85.png') }}" alt="Knowledge">
                            {% elseif test.categorie == 'IQ' %}
                                <img src="{{ asset('images/icons8-brain-85.png') }}" alt="IQ">
                            {% endif %}
                            <span class="category">{{ test.categorie }}</span>
                        </ul>
                    </div>
                </div>
        
        {% endfor %}
    </div>
    {% block js %}
    <script>
    function attemptTest(testId, hasTaken) {
        if (hasTaken) {
            alert("The test has already been taken. Please check your profile to view your score");
        } else {
            if (confirm("You can only take this test once. Are you ready to proceed?")) {
                window.location.href = '/user/test/exectest/' + testId;
            }
        }
    }
    </script>
    <script>
    function openTestInNewWindow(testId, hasTaken) {
        if (hasTaken) {
            alert("This test has already been taken. Please check your profile to view your score.");
        } else {
            var proceed = confirm("You can only take this test once. Are you ready to proceed?");
            if (proceed) {
                var url = '/user/test/exectest/' + testId;
                var windowFeatures = 'toolbar=no,location=no,status=no,menubar=no,scrollbars=yes,resizable=yes,width=800,height=600';
                var newWindow = window.open(url, 'Test Window', windowFeatures);
                if (newWindow) {
                    newWindow.focus();
                } else {
                    alert('Popup blocker is enabled. Please allow popups for this website.');
                }
            }
        }
    }





    </script>
    




    

    {% endblock %}

    {% endblock %}
