   <div class="main" style="margin: auto; width: 50%; height: 00px;">
    <!-- Contenu de la classe main -->

        <!-- Sign up form -->
        <section class="signup">
            <div class="container">
            <img class="na9" src="{{ asset('images/nakratempaa.png') }}" alt="sing up image">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Sign up</h2>
                        
                        {{ form_start(h, {'attr': {'class': 'register-form', 'novalidate': 'novalidate'}}) }}
    <div class="form-group">
        <label for="{{ h.nom.vars.id }}"><i class="zmdi zmdi-account material-icons-name"></i></label>
        {{ form_widget(h.nom, {'attr': {'placeholder': 'Votre nom'}}) }}
    </div>
    <div class="form-group">
        <label for="{{ h.prenom.vars.id }}"><i class="zmdi zmdi-account material-icons-name"></i></label>
        {{ form_widget(h.prenom, {'attr': {'placeholder': 'Votre pr√©nom'}}) }}
    </div>
    <div class="form-group">
        <label for="{{ h.datenes.vars.id }}"><i class="zmdi zmdi-calendar" ></i></i></label>
        {{ form_widget(h.datenes, {'attr': {'placeholder': 'Votre date de naissance'}}) }}
        {% if form_errors(h.datenes) %}
    <div class="alert-danger">
        {{ form_errors(h.datenes) }}
    </div>
{% endif %}
    </div>
    <div class="form-group">
        <label for="{{ h.mail.vars.id }}"><i class="zmdi zmdi-email"></i></label>
        {{ form_widget(h.mail, {'attr': {'placeholder': 'Votre adressse mail'}}) }}
          {% if form_errors(h.mail) %}
    <div class="alert alert-danger">
        {{ form_errors(h.mail) }}
    </div>
{% endif %}
    </div>
    <div class="form-group">
        <label for="{{ h.password.vars.id }}"><i class="zmdi zmdi-lock"></i></label>
        {{ form_widget(h.password, {'attr': {'placeholder': 'Mot de passe'}}) }}
              {% if form_errors(h.password) %}
    <div class="alert alert-danger">
        {{ form_errors(h.password) }}
    </div>
{% endif %}
    </div>
    <div class="form-group">
        <label class="userrole" for="{{ h.role.vars.id }}"><i class="zmdi zmdi-calendar"></i></label>
       {{ form_widget(h.role) }} 
    </div>
    <div class="form-group">
        <label for="{{ h.image.vars.id }}"><i class="zmdi zmdi-book-image"></i></label>
        {{ form_widget(h.image) }}
    </div>
    <div class="form-group form-button">
    {{ form_widget(h.Register) }}
</div>
{{ form_end(h) }}

                    </div>
                    <div class="signup-image">
                        <figure><img src="{{ asset('images/img.png') }}" alt="sing up image"></figure>
